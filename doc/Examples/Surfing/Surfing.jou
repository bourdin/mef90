reset             
#{Lx=10}
#{Ly=10}
#{lc = 2.5}
#{h=.1}
#{hstr = tostring(h)}

create surface rectangle width {Lx} height {Ly} zplane
create curve location {-Lx/2} 0 0 location {-Lx/2+lc}0  0
imprint tolerant surface 1 with curve 5

surface all scheme tridelaunay size {h}
tridelaunay point placement gq

block 1 surface 1
block 20 curve 1 3 4 6 8
block 30 curve 7

draw block all
hardcopy "Surfing.png" png

mesh surface all
smooth surface all

block 1 to 9 element type tri3
block 10 to 99 element type bar2
#{filename = Quote("Surfing-"//hstr//"-tri3.gen")}
export mesh {filename} dimension 2 block all overwrite
